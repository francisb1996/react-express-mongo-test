{
    "family": "test-app-task",
    "requiresCompatibilities": ["FARGATE"],
    "networkMode": "awsvpc",
    "containerDefinitions": [
        {
            "name": "express-server",
            "image": "test-repo/express-server",
            "memory": 512,
            "cpu": 256,
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 3001
                }
            ],
            "environment": [
                {
                    "name": "MONGODB_URI",
                    "value": "mongodb://mongo-db:27017"
                }
            ]
        },
        {
            "name": "mongo-db",
            "image": "mongo:latest",
            "memory": 512,
            "cpu": 256,
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 27017
                }
            ],
            "mountPoints": [
                {
                    "sourceVolume": "mongo-data",
                    "containerPath": "/data/db"
                }
            ]
        }
    ],
    "volumes": [
        {
          "name": "mongo-data",
          "efsVolumeConfiguration": {
            "fileSystemId": "fs-0d916a999f1d3cd60",
            "transitEncryption": "ENABLED"
          }
        }
      ]
}