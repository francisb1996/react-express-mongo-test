{
    "family": "test-app-task",
    "executionRoleArn": "arn:aws:iam::755874648034:role/ecsTaskExecutionRole",
    "networkMode": "bridge",
    "containerDefinitions": [
        {
            "name": "express-server",
            "image": "test-repo/express-server",
            "memory": 512,
            "cpu": 256,
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 3001,
                    "hostPort": 3001
                }
            ],
            "environment": [
                {
                    "name": "MONGODB_URI",
                    "value": "mongodb://mongo-db:27017"
                }
            ],
            "links": [
                "mongo-db"
            ]
        },
        {
            "name": "mongo-db",
            "image": "mongo:latest",
            "memory": 512,
            "cpu": 256,
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 27017,
                    "hostPort": 27017
                }
            ],
            "mountPoints": [
                {
                    "sourceVolume": "mongo-data",
                    "containerPath": "/data/db"
                }
            ]
        }
    ],
    "volumes": [
        {
            "name": "mongo-data",
            "host": {
                "sourcePath": "<YOUR_HOST_PATH_HERE>"
            }
        }
    ]
}